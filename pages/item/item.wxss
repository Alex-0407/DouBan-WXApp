  flex-direction: column;
  align-items: center;
  height: 1000rpx;
  padding: 50rpx 40rpx;
}

.poster {
  width: 80%;
  height: 80%;
  margin: 40rpx;
  margin-top: 80rpx;
}

.title {
  font-style: 42rpx;
  color: #444;
}

.info {
  font-size: 18rpx;
  color: #888;
  margin-top: 20rpx;
  width: 80%;
}

.summary {
  width: 80%;
  margin: 30rpx auto;
}

.label {
  display: block;
}

.content {
  color: #666;
  font-size: 20rpx;
  padding: 10rpx
}

.scr {
  
  height: 100%;
  
  bottom: 100rpx;
  display: flex;
	flex-direction: row;
	justify-content: space-between;
	position: fixed;
}

.buy {
  width: 100%;
	height: 100rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	position: fixed;
	bottom: 0;
	border-top: 2px solid #eee;
	background-color: white;
  
}

.buy-text {
  position: absolute;
  right: 10px;
  background-color: tomato;
  color: white;
}

/*stepper容器*/
.stepper {
	border: 1px solid #ccc;
	border-radius: 3px;
	width: 80px;
	height: 26px;
	margin:0 auto;
  
  position: absolute;
  left: 10px;
}


/*加号与减号*/
.stepper text {
	width: 19px;
	line-height: 26px;
	text-align: center;
	float: left;
}


/*数值*/
.stepper input {
	float: left;
	margin: 0 auto;
	width: 40px;
	height: 26px;
	text-align: center;
	font-size: 12px;
	border-left: 1px solid #ccc;
	border-right: 1px solid #ccc;
}

/*普通样式*/
.stepper .normal{
	color: black;
}

/*禁用样式*/
.stepper .disabled{
	color: #ccc;
}